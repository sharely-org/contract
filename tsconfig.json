{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "scripts/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "target"
  ]
}